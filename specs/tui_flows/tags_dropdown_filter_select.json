{
  "version": 1,
  "env": {
    "terminal": {
      "width": 120,
      "height": 40
    },
    "fixture": {
      "name": "Fixture Source",
      "path": "fixture_tree"
    }
  },
  "steps": [
    {
      "type": "key",
      "key": "1",
      "label": "go discover"
    },
    {
      "type": "wait",
      "ms": 2000,
      "until": {
        "plain_contains": "Source: Fixture Source"
      },
      "label": "wait for sources"
    },
    {
      "type": "key",
      "key": "Tab",
      "label": "exit pattern input"
    },
    {
      "type": "key",
      "key": "T",
      "label": "open tags dropdown"
    },
    {
      "type": "wait",
      "ms": 500,
      "until": {
        "plain_contains": ["Select Tag", "No tags yet"]
      },
      "label": "wait for tags dropdown"
    },
    {
      "type": "text",
      "text": "/fi",
      "label": "filter tags"
    },
    {
      "type": "assert",
      "plain_contains": "/fi",
      "label": "filter text visible"
    },
    {
      "type": "key",
      "key": "Enter",
      "label": "exit filter mode"
    },
    {
      "type": "assert",
      "plain_contains": "Enter:clear",
      "label": "filter applied"
    },
    {
      "type": "key",
      "key": "Enter",
      "label": "select tag"
    },
    {
      "type": "assert",
      "plain_not_contains": "Select Tag",
      "label": "dropdown closed"
    }
  ]
}
